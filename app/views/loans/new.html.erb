<h1>貸与金を追加する</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@loan) do |f| %>
    <%= f.label :誰に貸してる? %>
    <%= f.text_field :name %>

    <%= f.label :金額 %>
    <%= f.number_field :amount %>

    <%= f.submit "決定", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>