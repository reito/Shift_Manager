<h1>欲しいものを追加する</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@wish) do |f| %>
    <%= f.label :商品名 %>
    <%= f.text_field :name %>

    <%= f.label :金額 %>
    <%= f.number_field :price %>

    <%= f.submit "決定", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>